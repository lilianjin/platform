{% if form.fields.empty %}

    <div class="card">
        <div class="card-block">
            {{ trans("message.no_fields_available") }}
        </div>
    </div>

{% else %}

    {% if not form.sections.empty() %}

        {% for section in form.sections %}
            {% if section.view %}
                {% include section.view %}
            {% elseif section.html %}
                {{ section.html|raw }}
            {% else %}
                {% include "form/partials/section" %}
            {% endif %}
        {% endfor %}

    {% else %}
        {% include "form/partials/default" %}
    {% endif %}

{% endif %}
