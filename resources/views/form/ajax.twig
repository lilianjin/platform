{{ asset_add("scripts.js", "root::js/form/ajax.js") }}
{{ asset_add("scripts.js", "root::js/form/form.js") }}
{{ asset_add("scripts.js", "root::js/form/translations.js") }}

{% block content %}

    <div class="modal-header">
        <button class="close" data-dismiss="modal">
            <span>&times;</span>
        </button>

        <h4 class="modal-title">
            {{ trans(form.options.title)|raw }}
        </h4>
    </div>

    {{ form_open({'class': 'form ajax', 'enctype': 'multipart/form-data', 'url': form.options.url ?: url_full()}) }}

    <div class="modal-body">

        {% include "form/partials/translations" %}
        {% include "form/ajax/layout" %}

    </div>

    {% include "form/ajax/footer" %}

    {{ form_close() }}

{% endblock %}
